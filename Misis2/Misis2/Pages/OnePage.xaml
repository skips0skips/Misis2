            <StackLayout Grid.RowSpan="4"
                         Margin="10,150,20,0">
                <Grid>
                    <CollectionView SelectionMode="Single" 
                            ItemsSource="{Binding Disciplines}"                            
                            VerticalScrollBarVisibility="Never"
                            Margin="50,0,50,0"
                            SelectedItem="{Binding SelectedDiscipline}"
                            SelectionChanged="ProductSelected"                           
                            >
                        <CollectionView.Header>
                            <Label Text="Предметные области:"
                                   HorizontalOptions="Center"
                                   Style="{StaticResource label4}"
                                   VerticalOptions="Center"/>
                        </CollectionView.Header>
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" 
                                     Span="1"                                     
                                     VerticalItemSpacing="50"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.EmptyView>
                            <Label Text="No Item found." TextColor="Gray" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <BoxView Background="#009FDF"/>
                                    <Label Text="{Binding Name}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           FontSize="Caption"
                                           Style="{StaticResource label4}"/>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </StackLayout>
